<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Flapper News</title>
	<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

	<script src="javascripts/angular.module.js"></script>
    <script src="javascripts/angularApp.js"></script>
    <script src="javascripts/posts.factory.js"></script>
    <script src="javascripts/auth.factory.js"></script>
    <script src="javascripts/main.controller.js"></script>
    <script src="javascripts/posts.controller.js"></script>
    <script src="javascripts/auth.controller.js"></script>
    <script src="javascripts/nav.controller.js"></script>

	<style>
		.glyphicon-thumbs-up {
			cursor: pointer
		}
	</style>
</head>

<body ng-app="flapperNews">
	<nav class="navbar navbar-default pull-right" ng-controller="NavController as vm">
		<ul class="nav navbar-nav">
			<li ng-show="vm.isLoggedIn()"><a>{{ vm.currentUser() }}</a></li>
		<li ng-show="vm.isLoggedIn()"><a href="" ng-click="vm.logOut()">Log Out</a></li>
			<li ng-hide="vm.isLoggedIn()"><a href="/#/login">Log In</a></li>
			<li ng-hide="vm.isLoggedIn()"><a href="/#/register">Register</a></li>
		</ul>
	</nav>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<ui-view>
				<!-- Templates will be injected here -->
			</ui-view>
		</div>
	</div>

	<!-- home template -->
	<script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Flapper News</h1>
        </div>

    <!-- Show all posts, sorted by upvotes -->
        <div ng-repeat="post in vm.posts | orderBy: '-upvotes'">
            <span class="glyphicon glyphicon-thumbs-up" ng-click="vm.incrementUpvotes(post)"></span>
            {{post.upvotes}}
            <span style="font-size:20px; margin-left:10px;">
                <a ng-show="post.link" href="{{post.link}}">
                    {{post.title}}
                </a>
				<span ng-show="post.author">
	  				posted by <a>{{post.author}}</a> |
				</span>
                <span ng-hide="post.link">
                    {{post.title}}
                </span>
            </span>
            <!-- Go to comments -->
            <span>
                <a href="#/posts/{{post._id}}">Comments</a>
            </span>
        </div>

        <form ng-submit="vm.addPost()" ng-show="vm.isLoggedIn()" style="margin-top:30px;">
            <h3>Add a new post</h3>

            <div class="form-group">
                <input type="test" class="form-control" placeholder="Title" ng-model="vm.title"></input>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Link" ng-model="vm.link"></input>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>

		<div ng-hide="vm.isLoggedIn()">
			<h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
		</div>
    </script>


	<!-- post template -->
	<script type="text/ng-template" id="/posts.html">
        <div class="page-header">
            <h3>
            <a ng-show="post.link" href="{{post.link}}">
                {{post.title}}
            </a>
            <span ng-hide="post.link">
                {{post.title}}
            </span>
            </h3>
        </div>

        <div ng-repeat="comment in vm.post.comments | orderBy:'-upvotes'">
            <span class="glyphicon glyphicon-thumbs-up" ng-click="vm.incrementUpvotes(comment)"></span>
            {{comment.upvotes}} - by {{comment.author}}
            <span style="font-size:20px; margin-left:10px;">
            {{comment.body}}
            </span>
        </div>
        <form ng-submit="vm.addComment()" ng-show="vm.isLoggedIn()" style="margin-top:30px;">
            <h3>Add a new comment</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Comment" ng-model="vm.body"></input>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>

		<div ng-hide="vm.isLoggedIn()">
		  	<h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
		</div>

    </script>

	<script type="text/ng-template" id="/register.html">
		<div class="page-header">
			<h1>Flapper News</h1>
		</div>

		<div ng-show="vm.error" class="alert alert-danger row">
			<span>{{ vm.error.message }}</span>
		</div>

		<form ng-submit="vm.register()" style="margin-top:30px;">
			<h3>Register</h3>

			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username" ng-model="vm.user.username"></input>
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" ng-model="vm.user.password"></input>
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</form>
	</script>

	<script type="text/ng-template" id="/login.html">
		<div class="page-header">
			<h1>Flapper News</h1>
		</div>

		<div ng-show="error" class="alert alert-danger row">
			<span>{{ error.message }}</span>
		</div>

		<form ng-submit="vm.logIn()" style="margin-top:30px;">
			<h3>Log In</h3>

			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username" ng-model="vm.user.username"></input>
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" ng-model="vm.user.password"></input>
			</div>
			<button type="submit" class="btn btn-primary">Log In</button>
		</form>
	</script>

</body>

</html>
