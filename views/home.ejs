<script type="text/ng-template" id="/home.html">
    <div class="row home row-eq-height">
        <div class="col-md-12">

            <!-- Most popular -->

            <div class="page-header">
                 <h1><span class="glyphicon glyphicon-fire" aria-hidden="true"></span> Most popular</h1>
            </div>

            <div class="row">
                <div class="col-md-4" ng-repeat="movie in vm.movies | limitTo: 6">
                    <movie-card></movie-card>
                </div>
            </div>

            <!-- Your watchlist -->

            <div class="page-header">
                 <h1><span class="glyphicon glyphicon-heart" aria-hidden="true"></span> Your watchlist <small class="h1-small">Movies you want to watch</small></h1>
            </div>

            <div class="row">
                <div class="col-md-4" ng-repeat="movie in vm.watchList">
                    <movie-card></movie-card>
                </div>
            </div>

            <div ng-hide="vm.isLoggedIn()">
                <div class="need-login">You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> to start keeping track of your movies.</div>
            </div>
        </div>
    </div>
</script>
